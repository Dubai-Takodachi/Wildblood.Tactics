

<MudDialog>
    <TitleContent>
        <MudText>Rename</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="Name" Label="New Name" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton OnClick="Save">Save</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter] 
    public MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string Name { get; set; }


    private void Cancel() => MudDialog.Cancel();

    private void Save() => MudDialog.Close(DialogResult.Ok(Name));
}
