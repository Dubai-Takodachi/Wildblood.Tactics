@using Microsoft.AspNetCore.Components
@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudTextField T="string" Label="Paste JSON Data" @bind-Value="JsonData" Lines="10" Variant="Variant.Outlined" />
        <MudText Typo="Typo.caption" Color="Color.Info">
            Paste the exported tactic JSON data here.
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Import</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    public IMudDialogInstance MudDialog { get; set; } = null!;

    private string JsonData { get; set; } = string.Empty;

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(JsonData));
    }
}
